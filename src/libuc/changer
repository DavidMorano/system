#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} bfile_bm "


DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep ${N} $F > ${DN} ; then
      ed - $F <<\EOF
g/bfile_bmall/s//bfilebm_all/g
g/bfile_bmline/s//bfilebm_line/g
g/bfile_bmnone/s//bfilebm_none/g
	w
	q
EOF
      fi
    done
  fi
done


