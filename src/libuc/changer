#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} filebuf_readline"


DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep ${N} $F > ${DN} ; then
      ed - $F <<\EOF
g/filebuf_readline/s//filebuf_readln/g
	w
	q
EOF
      fi
    done
  fi
done


