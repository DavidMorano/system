#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} sigblock.h "


DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep ${N} $F > ${DN} ; then
      ed - $F <<\EOF
g/sigblock.h/s//sigblocker.h/g
g/sigblock_/s//sigblocker_/g
	w
	q
EOF
      fi
    done
  fi
done


