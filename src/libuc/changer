#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} cyi_lookcite cyi_enum cyi_read "

DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep -q "${N}" $F > ${DN} ; then
      ed - $F <<\EOF
g/cyi_lookcite/s//cyi_curcite/g
g/cyi_read/s//cyi_curread/g
g/cyi_enum/s//cyi_curenum/g
	w
	q
EOF
      fi
    done
  fi
done


