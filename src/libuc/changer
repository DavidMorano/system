#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} openpcsdircache "


DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep ${N} $F > ${DN} ; then
      ed - $F <<\EOF
g/openpcsdircache/s//pcsopendircache/g
	w
	q
EOF
      fi
    done
  fi
done


