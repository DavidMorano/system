#!/usr/extra/bin/ksh
# SUB
files_d | while read D ; do
  find $D -type f -mtime -60 -name '*.h*' -print | while read N ; do
    BN=${N##*/}
    IN=include/${BN}
    if [[ -f ${IN} ]] ; then
      if [[ $N -ef ${IN} ]] ; then 
        print -- YES
      else
        print -- NO 
        li $N $IN
        ln -f $N include
      fi
    else 
      p -- "linking to INCLUDE ${N}"
      ln $N $IN
    fi
    if [[ -r $BN ]] ; then
      li $N $BN
      rm $BN
    fi
  done
done

