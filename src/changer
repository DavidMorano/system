#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} global "


DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep "${N}" $F > ${DN} ; then
      ed - $F <<\EOF
g/global variables/s//external variables/g
	w
	q
EOF
      fi
    done
  fi
done


