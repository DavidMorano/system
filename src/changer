#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} cmsghdr_passed "

DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep -q "${N}" $F > ${DN} ; then
      ed - $F <<\EOF
g/cmsghdr_passed/s//conmsghdr_passed/g
	w
	q
EOF
      fi
    done
  fi
done

