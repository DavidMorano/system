#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} originally "

DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep -q "${N}" $F > ${DN} ; then
      ed - $F <<\EOF
g/This subroutine was originally/s//This code was originally/g
	w
	q
EOF
      fi
    done
  fi
done


