#!/usr/extra/bin/ksh
# CHANGER

NAMES=
NAMES="${NAMES} don aren "

DN=/dev/null

for F in "${@}" ; do
  if [[ -r "${F}" ]] ; then
    for N in ${NAMES} ; do
      if fgrep -q "${N}" $F > ${DN} ; then
      ed - $F <<\EOF
g/don't/s//do not/g
g/aren't/s//are not/g
	w
	q
EOF
      fi
    done
  fi
done


